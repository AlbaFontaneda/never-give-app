<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="1dp" >

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        style="@style/exerciseCardView">

        <RelativeLayout
            style="@style/exerciseRelativeLayout">

            <ImageView
                android:id="@+id/image"
                style="@style/exerciseImage" />

            <TextView
                android:id="@+id/title"
                style="@style/exerciseName" />

            <TextView
                android:id="@+id/num_series"
                style="@style/exerciseSeries"/>

            <TextView
                android:id="@+id/num_repeticiones"
                style="@style/exerciseRepeticiones"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>