<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rigobertosl.nevergiveapp.TrainingActivity$PlaceholderFragment">

    <ScrollView
        android:id="@+id/init_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TableLayout
            android:id="@+id/init_table"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/my_table"
                android:visibility="gone"
                style="@style/InitRows">
                <LinearLayout
                    android:id="@+id/my_table_header"
                    style="@style/InitHeaders">
                    <TextView
                        android:id="@+id/my_table_text"
                        style="@style/InitText" />
                    <!---  ADDED SPACER VIEW -->
                    <View
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        />
                    <!--- /ADDED SPACER VIEW -->
                    <ImageButton
                        android:id="@+id/my_table_options"
                        style="@style/InitOptionsButton"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/my_table_content"
                    style="@style/InitContent"/>
            </LinearLayout>

        </TableLayout>
    </ScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@drawable/ic_add" />

</android.support.design.widget.CoordinatorLayout>