<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:layout_margin="1dp" >

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        style="@style/cardView">

        <RelativeLayout
            style="@style/cardViewRelativeLayout" >

            <TextView
                android:id="@+id/item_title"
                style="@style/cardViewTitle"
                android:text="@string/titleCard" />

            <ImageButton
                android:id="@+id/item_options"
                style="@style/cardViewOptions" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recylcer_exercises"
                style="@style/cardViewRecycler" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>