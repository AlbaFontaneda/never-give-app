<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:layout_margin="1dp" >

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        style="@style/cardView">

        <RelativeLayout
            style="@style/cardViewRelativeLayout"
            android:background="@color/ActionBarEnd" >

            <TextView
                android:id="@+id/item_title"
                style="@style/cardViewTitle"
                android:text="TÃ­tulo" />

            <ImageButton
                android:id="@+id/item_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_init_options_menu"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="35dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_logro_no_completado"/>

            <TextView
                android:id="@+id/item_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="17dp"
                android:textSize="15dp"
                android:text="X"
                android:textStyle="bold"
                android:textColor="#FFF"/>

            <LinearLayout
                style="@style/cardViewLinear"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/item_content"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_below="@id/item_title"
                    android:padding="10dp"
                    android:textSize="17dp"
                    android:background="@color/cardViewContent"/>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>