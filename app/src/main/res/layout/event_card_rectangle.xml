<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    style="@style/cardView">

    <RelativeLayout
        style="@style/cardViewRelativeLayout" >

        <TextView
            android:id="@+id/item_title"
            style="@style/cardViewTitle"
            android:text="@string/titleCard" />

        <Switch
            android:id="@+id/signed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"/>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cardViewContent"
            android:id="@+id/recylcer_exercises"
            android:layout_below="@+id/item_title">

            <ImageView
                android:id="@+id/calendar_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_margin="5dp"
                android:src="@drawable/ic_calendario" />
            <TextView
                android:id="@+id/date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/calendar_icon"
                android:layout_margin="5dp"
                android:text="05/09/2019"
                android:textColor="@color/black"
                android:textSize="16sp"/>

            <ImageView
                android:id="@+id/time_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toLeftOf="@id/time_text"
                android:layout_margin="5dp"
                android:src="@drawable/ic_time" />
            <TextView
                android:id="@+id/time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_margin="5dp"
                android:text="00:00"
                android:textColor="@color/black"
                android:textSize="16sp"/>

            <ImageView
                android:id="@+id/location_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:layout_constraintTop_toBottomOf="@+id/calendar_icon"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_margin="5dp"
                android:src="@drawable/ic_localizacion" />
            <TextView
                android:id="@+id/location_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/date_text"
                app:layout_constraintLeft_toRightOf="@+id/location_icon"
                android:layout_margin="5dp"
                android:text="Polideportivo Juan de la Cierva"
                android:textColor="@color/black"
                android:textSize="16sp"/>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/sub_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/location_icon"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <ImageView
                    android:id="@+id/person_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:layout_constraintTop_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_margin="5dp"
                    android:src="@drawable/ic_person"/>
                <TextView
                    android:id="@+id/host_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/person_icon"
                    android:layout_margin="5dp"
                    android:text="Host"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>

                <ImageView
                    android:id="@+id/people_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:layout_constraintTop_toBottomOf="@id/person_icon"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_margin="5dp"
                    android:src="@drawable/ic_people"/>
                <ListView
                    android:id="@+id/members_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/host_text"
                    app:layout_constraintLeft_toRightOf="@id/people_icon"
                    android:layout_margin="5dp"
                    android:text="Member"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>

                <ImageView
                    android:id="@+id/notes_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:layout_constraintTop_toBottomOf="@id/members_list"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_margin="5dp"
                    android:src="@drawable/ic_notes"/>
                <TextView
                    android:id="@+id/notes_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/members_list"
                    app:layout_constraintLeft_toRightOf="@id/notes_icon"
                    android:layout_margin="5dp"
                    android:text="Notas"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>

            </android.support.constraint.ConstraintLayout>
        </android.support.constraint.ConstraintLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>