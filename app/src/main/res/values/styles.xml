<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--CARD VIEWS -->
    //General
    <style name="cardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">1dp</item>
        <item name="cardMaxElevation">4dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">6dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    //Relative layout
    <style name="cardViewRelativeLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/colorAccent</item>
    </style>

    //Titulo
    <style name="cardViewTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">6dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/titlesColor</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    //Botón de opciones
    <style name="cardViewOptions">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/selector_init_options_menu</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:src">@drawable/ic_options</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_alignParentEnd">true</item>
    </style>

    //Recyclerview (tablas de entrenamiento)
    <style name="cardViewRecycler">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/cardViewContent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_below">@id/item_title</item>
    </style>

    //LinearLayout (comidas)
    <style name="cardViewLinear">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">140dp</item>
        <item name="android:background">@color/cardViewContent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_below">@id/item_title</item>
    </style>

    //Imagen (comidas)
    <style name="cardViewImage">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    //Informacion (comidas)
    <style name="cardViewInfo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    //Dias (comidas)
    <style name="cardViewSubtitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
    </style>

    //Dias (comidas)
    <style name="cardViewContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!--CARDVIEW LIST -->
    <style name="cardViewList">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:dividerHeight">2dp</item>
        <item name="android:divider">#FFFFFF</item>
    </style>

    <!--CARDVIEW EXERCISES -->
    //General
    <style name="exerciseCardView">
        <item name="android:layout_width">140dp</item>
        <item name="android:layout_height">140dp</item>
        <item name="cardMaxElevation">2dp</item>
        <item name="cardElevation">1dp</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="exerciseRelativeLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">3dp</item>
    </style>

    //Imagen del ejercicio
    <style name="exerciseImage">
        <item name="android:layout_width">65dp</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    //Nombre del ejercicio
    <style name="exerciseName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@id/image</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">18sp</item>
    </style>

    //Series del ejercicio
    <style name="exerciseSeries">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@id/title</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">@color/bpblack</item>
        <item name="android:textSize">15sp</item>
    </style>

    //Repeticiones del ejercicio
    <style name="exerciseRepeticiones">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@id/num_series</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">@color/bpblack</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!-- RESUMEN DE LAS TABLAS DE ENTRENAMIENTO -->
    //Titulo
    <style name="resumeTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">25sp</item>
        <item name="android:padding">15dp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
    </style>

    //Imagen
    <style name="resumeImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    //Layout Info
    <style name="resumeInfo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>

    //Info data
    <style name="resumeData">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/layouts_resume_table</item>
    </style>

    //Info rep y series
    <style name="resumeDataNumber">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="resumeDataName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/bpblack</item>
    </style>

    //Layout descanso
    <style name="resumeDescansoData">
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:background">@drawable/layouts_resume_table</item>
    </style>

    //Descanso Buttons
    <style name="resumeDescansoButtons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/bpblack</item>
        <item name="android:layout_margin">1dp</item>
    </style>

    //Resume description
    <style name="resumeDescription">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/layouts_resume_table</item>
    </style>

    <!-- POP UPS -->
    //Title
    <style name="popUpTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">20dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/colorAccent</item>
    </style>

    //Title text
    <style name="popUpTextTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/titlesColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    //Layout data
    <style name="popUpData">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">25dp</item>
        <item name="android:paddingEnd">25dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    //Edit titles
    <style name="popUpNames">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">-5dp</item>
    </style>

    //Edit data
    <style name="popUpEdits">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>

    //RecycleView (solo editar tablas)
    <style name="popUpRecycler">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:dividerHeight">6dp</item>
        <item name="android:divider">@color/white</item>
        <item name="android:orientation">vertical</item>
    </style>

    //Popup Buttons
    <style name="popUpButtons">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:gravity">center</item>
    </style>

    //Textminutos:segundos
    <style name="popUpTimePicker">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/bpblack</item>
    </style>

    <style name="numberPicker">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="np_width">65dp</item>
        <item name="np_height">180dp</item>
        <item name="np_dividerColor">@color/colorPrimary</item>
        <item name="np_max">59</item>
        <item name="np_min">0</item>
        <item name="np_selectedTextColor">@color/colorAccent</item>
        <item name="np_textColor">@color/colorPrimary</item>
    </style>




    <!-- ESTILOS VENTANA DE INICIO -->
    <style name="InitRows">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/colorRow</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="InitHeaders">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorRow</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:weightSum">10</item>
    </style>

    <style name="InitText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_weight">9</item>
    </style>

    <style name="InitOptionsButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/selector_init_options_menu</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:src">@drawable/ic_options</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="InitContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:background">@color/colorCotent</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <!-- /ESTILOS VENTANA DE INICIO -->
    <!-- ESTILOS VENTANA DE COMIDAS -->


    <style name="FoodsRows">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/colorRow</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="FoodsHeaders">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorRow</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:weightSum">10</item>
    </style>

    <style name="FoodsText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_weight">9</item>
    </style>

    <style name="FoodsOptionsButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/selector_init_options_menu</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:src">@drawable/ic_options</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="FoodsContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <!-- /ESTILOS VENTANA DE COMIDAS -->

    <!-- ESTILOS VENTANA DE LOGROS -->
    <style name="AchievementsContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:background">@color/colorCotent</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="AchievementsRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <!--<item name="android:background">@drawaachievements_border_bottom_row</item>-->
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="ElementRows">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="summary">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="LastAchievementsContent">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:background">@drawable/achievements_border_bottom</item>
    </style>

    <!-- ESTILOS PANTALLA TIPOS DE EJERCICIOS -->
    <style name="Button_exercices_type">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:clickable">true</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/colorRow</item>
    </style>

    <style name="Image_exercise_type">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_weight">1</item>
    </style>


    <style name="Text_button_exercise_type">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_margin">30dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_weight">2</item>
    </style>

    <!-- ESTILOS POPUP EDICIÓN DE TABLA -->
    <style name="AtributteTableText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="ContentTableAttribute">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:maxLines">1</item>
    </style>

    <!-- DENTRO DEL RECYCLERVIEW -->
    <style name="AttributeExerciseText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left|center</item>
    </style>

    <style name="ContentExerciseAttributeShort">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="ContentExerciseAttributeLarge">
        <item name="android:layout_width">63dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLines">1</item>
    </style>


    <!-- COLLAPSING BAR -->
    <style name="ToolbarExpandedTitle">
        <item name="android:textSize">40dp</item>
        <item name="android:shadowColor">#ffffff</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:singleLine">false</item>
        <item name="android:minLines">1</item>
        <item name="android:lines">4</item>
        <item name="android:maxLines">5</item>
    </style>
</resources>
